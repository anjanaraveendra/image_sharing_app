<p id="notice"><%= notice %></p>

<h1>Listing Gallery Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Gallery</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gallery_attachments.each do |gallery_attachment| %>
      <tr>
        <td><%= gallery_attachment.tag_line %></td>
        <td><%= image_tag gallery_attachment.avatar.url %></td>
        <td><%= link_to 'Show', gallery_attachment %></td>
        <% if current_user.id == gallery_attachment.user_id %>
        <td><%= link_to 'Edit', edit_gallery_attachment_path(gallery_attachment) %></td>
        <td><%= link_to 'Destroy', gallery_attachment, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gallery attachment', new_gallery_attachment_path %>
